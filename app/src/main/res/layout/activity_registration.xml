<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pattern_left" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pattern_right" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="#00FFFFFF"
        android:text="Create Account"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/name_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello"
        app:srcCompat="@drawable/textfield_bg" />

    <ImageView
        android:id="@+id/name_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/name_bg"
        app:layout_constraintStart_toStartOf="@+id/name_bg"
        app:layout_constraintTop_toTopOf="@+id/name_bg"
        app:layout_constraintVertical_bias="0.49"
        app:srcCompat="@drawable/nam_ic" />

    <EditText

        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/name_bg"
        app:layout_constraintEnd_toEndOf="@+id/name_bg"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toEndOf="@+id/name_ic"
        app:layout_constraintTop_toTopOf="@+id/name_bg"
        app:layout_constraintVertical_bias="0.409" />





    <ImageView
        android:id="@+id/email_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_bg"
        app:srcCompat="@drawable/textfield_bg" />

    <ImageView
        android:id="@+id/email_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/email_bg"
        app:layout_constraintStart_toStartOf="@+id/email_bg"
        app:layout_constraintTop_toTopOf="@+id/email_bg"
        app:layout_constraintVertical_bias="0.428"
        app:srcCompat="@drawable/mail_ic" />


    <EditText
        android:id="@+id/email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:ems="10"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/email_bg"
        app:layout_constraintEnd_toEndOf="@+id/email_bg"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toEndOf="@+id/email_ic"
        app:layout_constraintTop_toTopOf="@+id/email_bg"
        app:layout_constraintVertical_bias="0.363" />

    <ImageView
        android:id="@+id/phonebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_bg"
        app:srcCompat="@drawable/textfield_bg" />

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/phonebg"
        app:layout_constraintStart_toStartOf="@+id/phonebg"
        app:layout_constraintTop_toTopOf="@+id/phonebg"
        app:layout_constraintVertical_bias="0.49"
        app:srcCompat="@drawable/phone_ic" />

    <EditText
        android:id="@+id/phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="@+id/phonebg"
        app:layout_constraintEnd_toEndOf="@+id/phonebg"
        app:layout_constraintHorizontal_bias="0.325"
        app:layout_constraintStart_toEndOf="@+id/phone_icon"
        app:layout_constraintTop_toTopOf="@+id/phonebg"
        app:layout_constraintVertical_bias="0.409" />

    <ImageView
        android:id="@+id/passwordbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonebg"
        app:srcCompat="@drawable/textfield_bg" />

    <ImageView
        android:id="@+id/password_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/passwordbg"
        app:layout_constraintStart_toStartOf="@+id/passwordbg"
        app:layout_constraintTop_toTopOf="@+id/passwordbg"
        app:layout_constraintVertical_bias="0.408"
        app:srcCompat="@drawable/password_ic" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/passwordbg"
        app:layout_constraintEnd_toEndOf="@+id/passwordbg"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toEndOf="@+id/password_ic"
        app:layout_constraintTop_toTopOf="@+id/passwordbg"
        app:layout_constraintVertical_bias="0.363" />




    <TextView
        android:id="@+id/signin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Already have an Account?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordbg" />


    <ImageView
        android:id="@+id/password_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/passwordbg"
        app:layout_constraintEnd_toEndOf="@+id/passwordbg"
        app:layout_constraintTop_toTopOf="@+id/passwordbg"
        app:layout_constraintVertical_bias="0.491"
        app:srcCompat="@drawable/eye_ic" />


    <TextView
        android:id="@+id/signintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/signup_btn"
        app:layout_constraintTop_toBottomOf="@+id/passwordbg" />

    <ImageView
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordbg"
        app:srcCompat="@drawable/yellow_btn" />



    <TextView
        android:id="@+id/facebook_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or create account using social media"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signintext"
        app:layout_constraintVertical_bias="0.353" />

    <ImageView
        android:id="@+id/fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/googleplus_ic"
        app:layout_constraintTop_toBottomOf="@+id/facebook_ic"
        app:srcCompat="@drawable/facebook_ic" />

    <ImageView
        android:id="@+id/googleplus_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook_ic"
        app:srcCompat="@drawable/google_ic" />

    <ImageView
        android:id="@+id/twitter_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/googleplus_ic"
        app:layout_constraintTop_toBottomOf="@+id/facebook_ic"
        app:srcCompat="@drawable/tweet_ic" />



</androidx.constraintlayout.widget.ConstraintLayout>